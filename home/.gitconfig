[alias]
    d = diff
    ds = diff --staged
    c = commit
    ca = commit --all
    cano = commit --amend --no-edit
    a = add
    p = push
    pl = pull --prune
    pla = pull --all --prune
    ap = add --patch
    s = status --short --branch
    sw = switch
    swd = sw --detach
    rb = rebase
    rbi = rebase --interactive
    dog = log --decorate --oneline --graph
    dogf = dog --first-parent
    doga = dog --all
    dogaf = doga --first-parent
    brt = !git for-each-ref refs/heads --color=always --sort -committerdate --format='%(HEAD)%(color:reset) %(color:yellow)%(refname:short)%(color:reset) %(contents:subject) %(color:green)(%(committerdate:relative))%(color:blue) <%(authorname)>'
[user]
    email = git@alexpovel.de
    name = Alex Povel
[commit]
    gpgsign = true
[core]
    autocrlf = false
    eol = lf
    editor = code --new-window --wait
    fsmonitor = true
    pager = delta
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    hyperlinks = true
    syntax-theme = Coldark-Dark
[diff]
    colorMoved = default
[gpg]
    format = ssh
[gpg "ssh"]
    allowedSignersFile = ~/.ssh/allowed_signers
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[merge]
    conflictstyle = diff3
[pull]
    rebase = true
[push]
    autoSetupRemote = true
